{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 500,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/AdishwarVerma/3179-testrepo/main/Bar_chart.csv"
    },
    "encoding": {
        "x":{"field":"State","type":"nominal"}
        ,"y":{"type":"quantitative","field":"Trips","title":"No.of Trips"}
    
    },
    "layer": [
        {
          "mark": "bar",
          "encoding": {
            "color": {
              "field": "State",
              "type": "nominal",
              "title": "STATE",
              "legend": "state"
        },"tooltip": [
            {"field": "State", "type": "nominal"},
            {"field": "Trips", "type": "nominal", "title": "Total Trips"}
            
          ]
    }
}]
}
